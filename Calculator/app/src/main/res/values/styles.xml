<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="DarkTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorDarkYellow</item>
        <item name="colorPrimaryDark">@color/colorDarkGreen</item>
        <item name="colorAccent">@color/colorWhiteText</item>
        <item name="android:colorBackground">@color/colorBlackBg</item>
        <item name="android:colorButtonNormal">@color/colorBlackShade</item>
    </style>

    <style name="LightTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorLightYellow</item>
        <item name="colorPrimaryDark">@color/colorLightGreen</item>
        <item name="colorAccent">@color/colorBlackText</item>
        <item name="android:colorBackground">@color/colorWhiteBg</item>
        <item name="android:colorButtonNormal">@color/colorWhiteShade</item>
    </style>
</resources>